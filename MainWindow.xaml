<Window x:Class="AudioVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Audio Visualizer" WindowState="Maximized" Background="#FF121212">
    <Grid>
        <!-- Define three columns: session controls, canvas, visual controls -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <!-- Session Controls (Left) -->
        <StackPanel Grid.Column="0" Background="#FF1E1E1E" Padding="10" Margin="0,0,5,0">
            <TextBlock Text="Session Controls" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <Button Name="midiButton" Content="Connect MIDI" Margin="0,5"/>
            <Button Name="audioButton" Content="Start Audio" Margin="0,5"/>
            <TextBlock Text="BPM:" Margin="0,10,0,0"/>
            <TextBlock Name="tempoLabel" Text="0" FontSize="14" FontWeight="SemiBold"/>
            <GroupBox Header="Swing/Variation" Margin="0,10,0,0">
                <Slider Name="swingSlider" Minimum="0" Maximum="100" Value="0" TickFrequency="10" IsSnapToTickEnabled="True"/>
                <TextBlock Text="Swing: 0%" Name="swingLabel"/>
            </GroupBox>
        </StackPanel>

        <!-- Visualizer Canvas (Center) -->
        <Canvas Name="visualCanvas"
                Grid.Column="1"
                Background="Black"
                ClipToBounds="True"/>

        <!-- Visual Controls (Right) -->
        <ScrollViewer Grid.Column="2" Background="#FF1E1E1E" Padding="10" Margin="5,0,0,0">
            <StackPanel>
                <TextBlock Text="Visual Controls" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <GroupBox Header="Shapes">
                    <StackPanel>
                        <CheckBox Content="Circle" IsChecked="True" Name="shapeCircleCheck"/>
                        <CheckBox Content="Rectangle" IsChecked="True" Name="shapeRectCheck"/>
                        <CheckBox Content="Triangle" IsChecked="True" Name="shapeTriCheck"/>
                        <CheckBox Content="Star" IsChecked="False" Name="shapeStarCheck"/>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Density" Margin="0,10,0,0">
                    <Slider Name="densitySlider" Minimum="1" Maximum="100" Value="50"/>
                    <TextBlock Text="50" Name="densityLabel"/>
                </GroupBox>
                <GroupBox Header="Size Modifier" Margin="0,10,0,0">
                    <Slider Name="sizeSlider" Minimum="0.1" Maximum="3" Value="1"/>
                    <TextBlock Text="1.0x" Name="sizeLabel"/>
                </GroupBox>
                <GroupBox Header="Volume Sensitivity" Margin="0,10,0,0">
                    <Slider Name="volumeSlider" Minimum="0" Maximum="1" Value="0.5"/>
                    <TextBlock Text="0.5" Name="volumeLabel"/>
                </GroupBox>
                <GroupBox Header="Deformation" Margin="0,10,0,0">
                    <Slider Name="deformSlider" Minimum="0" Maximum="1" Value="0"/>
                    <TextBlock Text="0.0" Name="deformLabel"/>
                </GroupBox>
                <GroupBox Header="Color Variation" Margin="0,10,0,0">
                    <Slider Name="colorSlider" Minimum="0" Maximum="1" Value="1"/>
                    <TextBlock Text="1.0" Name="colorLabel"/>
                </GroupBox>
                <GroupBox Header="Texture" Margin="0,10,0,0">
                    <ComboBox Name="textureCombo">
                        <ComboBoxItem Content="None" IsSelected="True"/>
                        <ComboBoxItem Content="Lines"/>
                        <ComboBoxItem Content="Grid"/>
                        <ComboBoxItem Content="Dots"/>
                    </ComboBox>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>